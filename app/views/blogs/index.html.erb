
<body>
  <div class="booyah-box col-12 mt-3">
    <div class="col-12">
        <div class="row feature">
          <div class="col-12 col-lg float-left mb-3">
            <h2>What's the Skinny?</h2>
          </div>

          <div class="col-12 col-sm float-right">
            <div class="float-right mr-3 mt-1">
              <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#blogModal">
              + Blog Post
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

  <div class="booyah-box col-12 mt-1">
    <div class="row feature">
      <% @blogs.each do |blog| %>
          <div class="latestPost">
            <div class="col-12 col-lg float-left">
              <div id="content_box">
                  <header>
                    <h3><%= link_to blog.title, blog_path(blog) %></h3>
                  </header><br />

                  <i><%= blog.subtitle %></i><br /><br />
                  <p><%= blog.author %></p><br />
            </div>
          </div>
        </div>
        <% end %>
      </div>
   </div>

</body>

<!-- Blog Modal -->
<div class="modal fade" id="blogModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">Ã—</span>
        </button>
        <h4 class="modal-title" id="myModalLabel">Tell Us What's Up</h4>
      </div>

      <%= simple_form_for(Blog.new, :url => { :action => "create" }) do |f| %>
        <div class="modal-body">
          <%= f.input :title %>
          <%= f.input :subtitle %>
          <%= f.input :content %>
          <%= f.input :author %>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <%= f.submit "Post", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
