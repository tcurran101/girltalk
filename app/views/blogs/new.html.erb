<div class="booyah-box col-8 offset-2  mt-5">
  <h1>Post a Blog</h1>
  <%= simple_form_for @blog do |f| %>
    <%= f.input :title %>
    <%= f.input :subtitle %>
    <%= f.input :content %>
    <%= f.input :author %>
    <%= f.submit "Submit", class: 'btn btn-primary' %>
  <% end %>
 </div>
